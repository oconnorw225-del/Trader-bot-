# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# This file contains all environment variables for Railway deployment
# =============================================================================

# Node Environment
NODE_ENV=production
PORT=3000

# Python Backend
PYTHON_BACKEND_PORT=8000
FLASK_ENV=production
FLASK_PORT=5000

# Trading Configuration
TRADING_MODE=paper
USE_LIVE_TRADING=false
TESTNET=true
DEMO_MODE=false

# NDAX API Credentials (from GitHub Secrets)
NDAX_API_KEY=${NDAX_API_KEY}
NDAX_API_SECRET=${NDAX_API_SECRET}
NDAX_USER_ID=${NDAX_USER_ID}
NDAX_ACCOUNT_ID=${NDAX_ACCOUNT_ID}
NDAX_BASE_URL=https://api.ndax.io

# Chimera Bot Configuration
CHIMERA_RUNTIME_ENABLED=true
RISK_LEVEL=moderate
MAX_POSITION_SIZE=0.1
MAX_DAILY_LOSS=0.05
MAX_TRADES_PER_DAY=20
MAX_OPEN_POSITIONS=5
STOP_LOSS_PERCENT=0.02
TAKE_PROFIT_PERCENT=0.05
REPORTING_INTERVAL=3600

# Safety Configuration
SAFETY_LOCK=true
ALLOW_LIVE=false

# Railway Configuration
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_ID=${RAILWAY_PROJECT_ID}
RAILWAY_SERVICE_ID=${RAILWAY_SERVICE_ID}

# GitHub Integration
GITHUB_TOKEN=${GITHUB_TOKEN}
GITHUB_REPOSITORY=oconnorw225-del/Trader-bot-

# Domain Configuration
DOMAIN=www.aiwebe.online
DDNS_PASSWORD=${DDNS_PASSWORD}

# Security & Authentication
ACCESS_PASSWORD=${ACCESS_PASSWORD}
SESSION_SECRET=${SESSION_SECRET}
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
FLASK_SECRET_KEY=${FLASK_SECRET_KEY}
TOKEN_EXPIRY=24h
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
REQUIRE_AUTH=true

# Database Configuration
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}
POSTGRES_USER=ndax
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}

# Frontend Configuration (Vite)
VITE_API_URL=https://www.aiwebe.online
VITE_PYTHON_API_URL=https://www.aiwebe.online/python
VITE_APP_VERSION=2.1.0
VITE_DEMO_MODE=false

# Backend Server Ports
WS_PORT=8080
METRICS_PORT=9090

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# API Keys for Platform Integration
OPENAI_API_KEY=${OPENAI_API_KEY}
HUGGINGFACE_API_KEY=${HUGGINGFACE_API_KEY}

# Binance (Optional)
BINANCE_API_KEY=${BINANCE_API_KEY}
BINANCE_API_SECRET=${BINANCE_API_SECRET}

# Freelance Platform APIs
UPWORK_CLIENT_ID=${UPWORK_CLIENT_ID}
UPWORK_CLIENT_SECRET=${UPWORK_CLIENT_SECRET}
FIVERR_API_KEY=${FIVERR_API_KEY}
FREELANCER_OAUTH_TOKEN=${FREELANCER_OAUTH_TOKEN}

# Auto-Start AI Job Platform APIs
TOLOKA_API_KEY=${TOLOKA_API_KEY}
REMOTASKS_API_KEY=${REMOTASKS_API_KEY}
SCALEAI_API_KEY=${SCALEAI_API_KEY}

# Crash Recovery
ENABLE_AUTO_RECOVERY=true
BACKUP_INTERVAL_MINUTES=30

# Compliance
ENABLE_COMPLIANCE_CHECKS=true
COMPLIANCE_REGION=CA

# Crypto Payout
CRYPTO_PAYOUT_ADDRESS=${CRYPTO_PAYOUT_ADDRESS}
ENABLE_CRYPTO_PAYOUTS=true

# Platform Priority
PLATFORM_PRIORITY_ENABLED=true
PRIORITY_RECALC_HOURS=4

# Bot Configuration
BOT_NAME=Chimera-NDAX-Bot
BOT_EMAIL=${BOT_EMAIL}
BOT_MODE=PAPER

# CORS Configuration
CORS_ORIGIN=*
